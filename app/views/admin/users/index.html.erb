<div class="container-fluid">

  <div class="row">
    <h4> ユーザ一覧 </h4>
  </div>

  <%= form_with url:'/admin/users', method: :get, local: true do |f| %>
  <%= f.hidden_field :search, value: 'true' %>
    <div class="row clearfix">
      <input type="text" class="form-control keyword-form clearfix" name="name" value="" placeholder="ユーザ名検索ワード">
      <button type="submit" class="btn btn-primary search-btn" name="commit">検索</button>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-4">
      <%= link_to "名前でソートする", admin_users_path(name_order: "true") %>
    </div>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>ユーザ名</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= render 'layouts/user', collection: @users %>
  </table>

  <%= paginate @users, left: 1, right: 3 %><br>

  <%= link_to 'ユーザの登録', new_user_path %>

</div>
