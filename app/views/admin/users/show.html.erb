<div class="container">
  <h4>ユーザ情報</h4>
  <form>

    <div class="row">
      <div class="form-group col-md-6">
        <label>ユーザ名</label>
        <input type="text" readonly class="form-control" name="user[name]" value="<%=@user.name%>">
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label>Eメール</label>
        <input type="text" readonly class="form-control" name="user[email]" value="<%=@user.email%>">
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label>ユーザ区分</label>
        <input type="select" readonly class="form-control show-form" value="<%= @user.admin ? '管理者' : '一般ユーザ'%>">
      </div>
    </div>

    <div class="row">
    <h4>ユーザ タスク一覧 </h4>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>タスク名</th>
        <th>タスク詳細</th>
        <th>終了期限</th>
        <th>ステータス</th>
        <th>優先順位</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <%= render 'layouts/admin_task', collection: @tasks %>

    </table>

    <%= link_to '編集', edit_admin_user_path(@user) %> |
    <%= link_to '戻る', admin_users_path %>

  </form>
</div>
