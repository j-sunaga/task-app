<div class="container-fluid">

  <div class="row">
    <h4> ラベル一覧 </h4>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>ラベル名</th>
        <th>ラベルタスク</th>
        <th>作成日</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @labels.each do |label| %>
        <tr>
          <td class="label_row"><%= label.name %></td>

          <td>
          <% label.tasks.each do |task| %>
            <span class="label label-default"><%= task.name %></span>
          <% end %>
          </td>
          <td><%= label.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
          <td><%= link_to '詳細', label %></td>
          <td><%= link_to '編集', edit_label_path(label) %></td>
          <td><%= link_to '削除', label, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>


  <%= link_to 'ラベルの登録', new_label_path %>

</div>
