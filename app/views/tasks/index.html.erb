<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<%= form_with url:'/tasks', method: :get, local: true do |f| %>
  <%= f.hidden_field :search, value: 'true' %>
  <%= f.label :name, 'タスクタイトル検索ワード' %>
  <%= f.text_field :name %>
  <%= f.label :status %>
  <%= f.select :status, [['未着手','waiting' ], ['着手中', 'working'],['完了', 'completed']],{ include_blank: true, selected: 0 }, { id: "pull_down"} %>
  <%= f.submit 'Search' %>
<% end %>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>

<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status_i18n %></td>
        <td><%= task.priority_i18n %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスクの登録', new_task_path %>
